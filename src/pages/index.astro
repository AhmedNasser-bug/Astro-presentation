---
import Layout from '../layouts/Layout.astro';

// --- COMPONENTS ---
import PhaseNavigator from '../components/PhaseNavigator.jsx';
import PhaseLighting from '../components/PhaseLighting.jsx';

// --- SECTIONS ---

// PHASE 1: THE PROBLEM
import Hero from '../sections/Hero.astro';
import OverviewSection from '../sections/OverviewSection.astro';
import TheProblem from '../sections/TheProblem.astro';       // Was ProblemSection
import BlogpostProb from '../sections/BlogpostProb.astro';   // Was RealityCheckSection
import ProjectAnatomy from '../sections/ProjectAnatomy.astro';
import PrncplesSection from '../sections/PrncplesSection.astro';

// PHASE 2: THE SOLUTION
import TheSolution from '../sections/TheSolution.astro';     // Was WebsiteMockupSection
import SeparationSection from '../sections/SeparationSection.astro';
import HowItWorksSection from '../sections/HowItWorksSection.astro';

// PHASE 3: REAL WORLD IMPACT
import RealWorldSection from '../sections/RealWorldSection.astro';
import RealNumbersSection from '../sections/RealNumbersSection.astro';

// PHASE 4: ECOSYSTEM & BACKEND
import PlotTwistSection from '../sections/PlotTwistSection.astro';
import IntegrationSection from '../sections/IntegrationSection.astro';
import BackendSection from '../sections/BackendSection.astro';
//import BackendRealSection from '../sections/BackendRealSection.astro';
import IntegrationsSection from '../sections/IntegrationsSection.astro';
import ConclusionSection from '../sections/ConclusionSection.astro';
import StoreSection from '../sections/StoreSection.astro';
---

<Layout title="Astro Architecture">
    
    <!-- Global Visual Managers -->
    <PhaseLighting client:load />
    <PhaseNavigator client:idle />

    <!-- ========================================== -->
    <!-- PHASE 1: THE PROBLEM (Red/Orange Vignette) -->
    <!-- ========================================== -->
    <div data-phase="1">
        <div id="hero"><div id='hero'><Hero /></div></div>
        <div id="overview"><OverviewSection /></div>
        <div id="problem">
            <div id='problem'><TheProblem /></div>
            <BlogpostProb />
            <ProjectAnatomy />
            <PrncplesSection />
        </div>
    </div>

    <!-- ========================================== -->
    <!-- PHASE 2: THE SOLUTION (Astro Purple Vignette) -->
    <!-- ========================================== -->
    <div data-phase="2">
        <div id="solution">
            <div id='solution'><TheSolution /></div>
            <SeparationSection />
            <HowItWorksSection />
        </div>
    </div>

    <!-- ========================================== -->
    <!-- PHASE 3: IMPACT (Green/Emerald Vignette) -->
    <!-- ========================================== -->
    <div data-phase="3">
        <div id="impact">
            <RealWorldSection />
            <RealNumbersSection />
        </div>
    </div>

    <!-- ========================================== -->
    <!-- PHASE 4: PROS & ECOSYSTEM (Blue Vignette) -->
    <!-- ========================================== -->
    <div data-phase="4">
        <div id="agnostic">
            <div id='agnostic'><PlotTwistSection /></div>
            <IntegrationSection />
        </div>
        <div id="backend">
            <BackendSection />
        </div>
        <div id="ecosystem">
            <div id='ecosystem'><IntegrationsSection />
    <StoreSection/></div>
            <div id='conclusion'><ConclusionSection /></div>
        </div>
    </div>

</Layout>
