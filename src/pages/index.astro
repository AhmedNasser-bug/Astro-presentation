---
import Layout from '../layouts/Layout.astro';
import ReactCore from '../components/ReactCore.jsx';
import VueHabitat from '../components/VueHabitat.vue';
import SvelteThruster from '../components/SvelteThruster.svelte';
import { Zap, Layers, Box, Globe, ChevronDown } from 'lucide-react';

// Static Data for "Pros" Cards
const pros = [
    {
        title: "Islands Architecture",
        desc: "Component-level isolation. One crash doesn't sink the ship.",
        icon: Box,
        color: "text-blue-400"
    },
    {
        title: "Zero JS Default",
        desc: "Static HTML is generated unless you explicitly ask for interactivity.",
        icon: Zap,
        color: "text-yellow-400"
    },
    {
        title: "UI Agnostic",
        desc: "Bring your own framework. React, Vue, Svelte side-by-side.",
        icon: Layers,
        color: "text-purple-400"
    },
    {
        title: "Edge Ready",
        desc: "Server-side rendering capabilities for global distribution.",
        icon: Globe,
        color: "text-emerald-400"
    }
];
---

<Layout title="Nebula Station | Astro">
    <!-- HERO SECTION -->
	<header class="relative min-h-[90vh] flex flex-col items-center justify-center text-center px-6 border-b border-white/5">
        <!-- Orbital Ring Decoration -->
        <div class="absolute w-[600px] h-[600px] rounded-full border border-white/5 animate-pulse-slow pointer-events-none"></div>
        <div class="absolute w-[800px] h-[800px] rounded-full border border-white/5 opacity-50 pointer-events-none"></div>
        
        <div class="relative z-10 max-w-4xl mx-auto">
            <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-astro/10 border border-astro/20 text-astro text-xs font-mono mb-8 backdrop-blur-md">
                <span class="relative flex h-2 w-2">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-astro opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2 w-2 bg-astro"></span>
                </span>
                SYSTEM ONLINE: ASTRO 4.0
            </div>

            <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight mb-6 bg-clip-text text-transparent bg-gradient-to-b from-white to-white/50">
                The Architecture of <br />
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-astro to-blue-500">Pure Performance</span>
            </h1>
            
            <p class="text-lg md:text-xl text-slate-400 max-w-2xl mx-auto leading-relaxed">
                Astro sends <span class="text-white font-semibold">HTML</span> over the wire. 
                JavaScript is only loaded for the interactive "Islands" you see below. 
                Everything else is void.
            </p>

            <div class="mt-10 flex gap-4 justify-center">
                <a href="#islands" class="px-6 py-3 bg-white text-void-950 font-bold rounded-lg hover:bg-slate-200 transition-colors">
                    Inspect Modules
                </a>
                <a href="https://astro.build" target="_blank" class="px-6 py-3 bg-white/5 border border-white/10 text-white rounded-lg hover:bg-white/10 transition-colors backdrop-blur-sm">
                    Read Docs
                </a>
            </div>
        </div>

        <div class="absolute bottom-10 animate-bounce text-slate-500">
            <ChevronDown />
        </div>
	</header>

    <!-- PROS GRID -->
    <section class="py-24 px-6 border-b border-white/5 bg-void-900/50">
        <div class="max-w-7xl mx-auto">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold mb-4">Why we built the Station</h2>
                <p class="text-slate-400">Key advantages of the Astro Framework</p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                {pros.map(p => (
                    <div class="p-6 rounded-2xl bg-white/5 border border-white/10 hover:border-white/20 transition-all duration-300 group">
                        <div class={`p-3 rounded-lg bg-void-950 w-fit mb-4 ${p.color}`}>
                            <p.icon size={24} />
                        </div>
                        <h3 class="text-xl font-bold mb-2 text-starlight group-hover:text-white">{p.title}</h3>
                        <p class="text-sm text-slate-400 leading-relaxed">{p.desc}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- THE ISLANDS DEMO -->
	<main id="islands" class="py-24 px-6 max-w-7xl mx-auto">
        <div class="flex justify-between items-end mb-12">
            <div>
                <h2 class="text-3xl font-bold text-white">Interactive Modules</h2>
                <p class="text-slate-400 mt-2">Hydrated on-demand. The rest of this page is 0kb JS.</p>
            </div>
            <div class="hidden md:flex gap-2 text-xs font-mono text-slate-500">
                <span class="flex items-center gap-1"><div class="w-2 h-2 bg-react rounded-full"></div>REACT</span>
                <span class="flex items-center gap-1"><div class="w-2 h-2 bg-vue rounded-full"></div>VUE</span>
                <span class="flex items-center gap-1"><div class="w-2 h-2 bg-svelte rounded-full"></div>SVELTE</span>
            </div>
        </div>

		<div class="grid grid-cols-1 lg:grid-cols-3 gap-8 h-auto lg:h-[450px]">
            
            <!-- REACT DOCK -->
            <div class="relative group">
                <div class="absolute -inset-0.5 bg-gradient-to-b from-react to-blue-900 rounded-2xl opacity-20 group-hover:opacity-40 transition duration-500 blur"></div>
                <div class="relative h-full bg-void-900 rounded-xl border border-white/10 p-1 flex flex-col">
                    <div class="bg-void-950/50 flex-grow rounded-lg p-6 backdrop-blur-xl">
                        <ReactCore client:load />
                    </div>
                    <div class="p-3 text-center border-t border-white/5">
                        <code class="text-[10px] text-slate-500 bg-black/40 px-2 py-1 rounded">client:load</code>
                        <span class="text-[10px] text-slate-600 ml-2">Hydrates immediately</span>
                    </div>
                </div>
            </div>

            <!-- VUE DOCK -->
            <div class="relative group mt-8 lg:mt-0">
                <div class="absolute -inset-0.5 bg-gradient-to-b from-vue to-emerald-900 rounded-2xl opacity-20 group-hover:opacity-40 transition duration-500 blur"></div>
                <div class="relative h-full bg-void-900 rounded-xl border border-white/10 p-1 flex flex-col">
                    <div class="bg-void-950/50 flex-grow rounded-lg p-6 backdrop-blur-xl">
                        <VueHabitat client:visible />
                    </div>
                    <div class="p-3 text-center border-t border-white/5">
                        <code class="text-[10px] text-slate-500 bg-black/40 px-2 py-1 rounded">client:visible</code>
                        <span class="text-[10px] text-slate-600 ml-2">Hydrates when seen</span>
                    </div>
                </div>
            </div>

            <!-- SVELTE DOCK -->
            <div class="relative group">
                <div class="absolute -inset-0.5 bg-gradient-to-b from-svelte to-orange-900 rounded-2xl opacity-20 group-hover:opacity-40 transition duration-500 blur"></div>
                <div class="relative h-full bg-void-900 rounded-xl border border-white/10 p-1 flex flex-col">
                    <div class="bg-void-950/50 flex-grow rounded-lg p-6 backdrop-blur-xl">
                        <SvelteThruster client:idle />
                    </div>
                    <div class="p-3 text-center border-t border-white/5">
                        <code class="text-[10px] text-slate-500 bg-black/40 px-2 py-1 rounded">client:idle</code>
                        <span class="text-[10px] text-slate-600 ml-2">Hydrates when idle</span>
                    </div>
                </div>
            </div>

		</div>

        <!-- TELEMETRY FOOTER -->
        <div class="mt-24 p-6 rounded-xl border border-white/5 bg-void-950/80 font-mono text-xs text-slate-500 flex flex-col md:flex-row justify-between items-center gap-4">
            <div class="flex gap-8">
                <div>
                    <span class="block text-slate-700 uppercase tracking-wider mb-1">Status</span>
                    <span class="text-emerald-500">‚óè OPERATIONAL</span>
                </div>
                <div>
                    <span class="block text-slate-700 uppercase tracking-wider mb-1">Rendering</span>
                    <span class="text-astro">SERVER-FIRST</span>
                </div>
            </div>
            <div>
                SESSION ID: {Math.random().toString(36).substr(2, 9).toUpperCase()}
            </div>
        </div>
	</main>
</Layout>