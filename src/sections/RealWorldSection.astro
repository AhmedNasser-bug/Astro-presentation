---
import RealWorldImpact from '../components/RealWorldImpact.jsx';
import { Briefcase } from 'lucide-react';
---

<section class="relative py-32 px-6 border-b border-white/5 bg-void-900 overflow-hidden">
    <!-- Prismatic Background Glow -->
    <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_bottom_left,_var(--tw-gradient-stops))] from-emerald-900/10 via-void-900 to-void-900 pointer-events-none"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        
        <!-- Header -->
        <div class="text-center max-w-4xl mx-auto mb-20">
            <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-emerald-500/10 border border-emerald-500/20 text-emerald-400 text-xs font-mono font-bold mb-8 uppercase tracking-widest">
                <Briefcase size={14} />
                Business Logic
            </div>
            
            <h2 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight mb-6">
                Real-World <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-400 to-teal-500">Impact</span>
            </h2>
            
            <p class="text-xl text-slate-400 leading-relaxed max-w-2xl mx-auto">
                Technology choices shouldn't dictate your business velocity.
                Stop rewriting code just to fit a framework.
            </p>
        </div>

        <!-- The Scenario Visualizer -->
        <RealWorldImpact client:visible />

    </div>
</section>
