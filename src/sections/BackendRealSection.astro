---
import BackendReal from '../components/BackendReal.jsx';
import { Server } from 'lucide-react';
---

<section class="relative py-32 px-6 border-b border-white/5 bg-void-900 overflow-hidden">
    <!-- Matrix Glow -->
    <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-yellow-900/5 via-void-900 to-void-900 pointer-events-none"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        
        <!-- Header -->
        <div class="text-center max-w-4xl mx-auto mb-20">
            <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-yellow-500/10 border border-yellow-500/20 text-yellow-400 text-xs font-mono font-bold mb-8 uppercase tracking-widest">
                <Server size={14} />
                Live Server Environment
            </div>
            
            <h2 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight mb-6">
                Not a Simulation. <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-orange-500">Real Backend.</span>
            </h2>
            
            <p class="text-xl text-slate-400 leading-relaxed max-w-2xl mx-auto">
                Astro is a fully capable server-side framework. 
                Interact with the live endpoints below running Node.js and Hono.
            </p>
        </div>

        <!-- The Live Interactive Component -->
        <BackendReal client:visible />

    </div>
</section>
