---
import IntegrationsDock from '../components/IntegrationsDock.vue';
import { Puzzle } from 'lucide-react';
---

<section class="relative py-32 px-6 border-b border-white/5 bg-void-950 overflow-hidden">
    <!-- Ambient Purple Glow -->
    <div class="absolute bottom-0 right-0 w-1/2 h-full bg-purple-900/10 blur-[120px] pointer-events-none"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        
        <!-- Header -->
        <div class="text-center max-w-4xl mx-auto mb-20">
            <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-purple-500/10 border border-purple-500/20 text-purple-400 text-xs font-mono font-bold mb-8 uppercase tracking-widest">
                <Puzzle size={14} />
                Extensibility
            </div>
            
            <h2 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight mb-6">
                Infinite <span class="text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-500">Integrations</span>
            </h2>
            
            <p class="text-xl text-slate-400 leading-relaxed max-w-2xl mx-auto">
                Extend Astro with a few keystrokes. Official integrations for your favorite tools, 
                plus a massive community catalog.
            </p>
        </div>

        <!-- The Vue.js Dock -->
        <IntegrationsDock client:visible />

    </div>
</section>
