---
import { Flag, Activity, Code2, Server, Database, Puzzle, Rocket } from 'lucide-react';

const phases = [
  { 
    id: 1, 
    title: "The Problem", 
    desc: "Why monolithic SPAs are slowing us down.", 
    icon: Activity, 
    color: "text-red-400",
    border: "border-red-500/20",
    bg: "bg-red-500/5"
  },
  { 
    id: 2, 
    title: "The Solution", 
    desc: "Introducing Islands Architecture.", 
    icon: Code2, 
    color: "text-astro",
    border: "border-astro/20",
    bg: "bg-astro/5"
  },
  { 
    id: 3, 
    title: "Agnosticism", 
    desc: "Using React, Vue, & Svelte together.", 
    icon: Puzzle, 
    color: "text-blue-400",
    border: "border-blue-500/20",
    bg: "bg-blue-500/5"
  },
  { 
    id: 4, 
    title: "Backend", 
    desc: "SSR, API Routes, and Hono integration.", 
    icon: Server, 
    color: "text-yellow-400",
    border: "border-yellow-500/20",
    bg: "bg-yellow-500/5"
  },
  { 
    id: 5, 
    title: "Ecosystem", 
    desc: "Integrations and future-proofing.", 
    icon: Database, 
    color: "text-purple-400",
    border: "border-purple-500/20",
    bg: "bg-purple-500/5"
  }
];
---

<section class="relative py-24 px-6 border-b border-white/5 bg-void-950">
    <div class="max-w-6xl mx-auto">
        
        <div class="text-center mb-16">
             <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-slate-300 text-xs font-mono mb-6">
                <Flag size={12} />
                FLIGHT PLAN
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-white tracking-tight">
                Presentation <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-slate-500">Overview</span>
            </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-4">
            {phases.map((phase, index) => (
                <div class={`relative p-6 rounded-xl border ${phase.border} ${phase.bg} flex flex-col items-center text-center hover:scale-105 transition-transform duration-300 group`}>
                    <div class={`p-3 rounded-full bg-void-950 border border-white/10 mb-4 ${phase.color} shadow-lg relative z-10`}>
                        <phase.icon size={20} />
                    </div>
                    
                    {/* Connecting Line (Desktop) */}
                    {index < phases.length - 1 && (
                        <div class="hidden lg:block absolute top-1/2 -right-6 w-8 h-px bg-white/10 z-0"></div>
                    )}

                    <h3 class="text-sm font-bold text-white mb-2">{phase.title}</h3>
                    <p class="text-xs text-slate-400 leading-relaxed">{phase.desc}</p>
                </div>
            ))}
        </div>

    </div>
</section>
