---
import FrameworkIntegration from '../components/FrameworkIntegration.jsx';
import { Blocks } from 'lucide-react';
---

<section class="relative py-32 px-6 border-b border-white/5 bg-void-950 overflow-hidden">
    <!-- Prismatic Background Glow -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-gradient-to-r from-blue-500/10 via-purple-500/10 to-orange-500/10 blur-[120px] pointer-events-none rounded-full opacity-50"></div>

    <div class="max-w-6xl mx-auto relative z-10">
        
        <!-- Header -->
        <div class="text-center max-w-3xl mx-auto mb-20">
            <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/5 border border-white/10 text-slate-300 text-xs font-mono font-bold mb-8 uppercase tracking-widest hover:bg-white/10 transition-colors cursor-default">
                <Blocks size={14} />
                Unified Ecosystem
            </div>
            
            <h2 class="text-4xl md:text-6xl font-extrabold text-white tracking-tight mb-6">
                End the <span class="relative inline-block">
                    <span class="relative z-10">Framework Wars</span>
                    <span class="absolute bottom-1 left-0 w-full h-3 bg-red-500/80 -rotate-2 transform origin-left"></span>
                </span>
            </h2>
            
            <p class="text-xl text-slate-400 leading-relaxed">
                Astro is not a competitor. It is a <span class="text-white font-bold">universal platform</span> for your favorite UI libraries.
            </p>
        </div>

        <!-- The Interactive Grid -->
        <FrameworkIntegration client:visible />

    </div>
</section>
