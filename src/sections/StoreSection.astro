---
import IntegrationsStore from '../components/IntegrationsStore.jsx';
import { PackageOpen } from 'lucide-react';
---

<section class="relative py-32 px-6 border-b border-white/5 bg-void-900 overflow-hidden">
    <!-- Ambient Glow -->
    <div class="absolute top-0 center w-full h-full bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-indigo-900/10 via-void-900 to-void-900 pointer-events-none"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        
        <!-- Header -->
        <div class="text-center max-w-4xl mx-auto mb-12">
            <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-indigo-500/10 border border-indigo-500/20 text-indigo-400 text-xs font-mono font-bold mb-8 uppercase tracking-widest">
                <PackageOpen size={14} />
                Marketplace
            </div>
            
            <h2 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight mb-6">
                Powered by <span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 to-purple-400">Community</span>
            </h2>
            
            <p class="text-xl text-slate-400 leading-relaxed max-w-2xl mx-auto">
                Extend your project with a vast library of official and community integrations.
                Drop-in support for everything you need.
            </p>
        </div>

        <!-- The Store UI -->
        <IntegrationsStore client:visible />

    </div>
</section>
