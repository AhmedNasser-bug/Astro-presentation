---
import FrameworkIslands from '../components/FrameworkIslands.jsx';
import { Layers } from 'lucide-react';
---

<section class="relative py-32 px-6 border-b border-white/5 bg-void-900 overflow-hidden">
    <!-- Background Gradient Mesh -->
    <div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_right,_var(--tw-gradient-stops))] from-blue-900/10 via-void-900 to-void-900 pointer-events-none"></div>

    <div class="max-w-7xl mx-auto relative z-10">
        
        <!-- Header -->
        <div class="text-center max-w-4xl mx-auto mb-16">
            <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-indigo-500/10 border border-indigo-500/20 text-indigo-400 text-xs font-mono font-bold mb-8 uppercase tracking-widest">
                <Layers size={14} />
                The Plot Twist
            </div>
            
            <h2 class="text-4xl md:text-6xl font-extrabold text-white tracking-tight mb-8 leading-tight">
                Framework <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-emerald-400 to-orange-500">Agnostic</span>
            </h2>
            
            <p class="text-xl text-slate-400 leading-relaxed max-w-2xl mx-auto">
                Bring your own framework. Bring <em class="text-white not-italic">all</em> of them. 
                Astro renders them all to static HTML and hydrates them in isolation.
            </p>
        </div>

        <!-- The Interactive Dashboard -->
        <FrameworkIslands client:visible />
        
        <!-- Footer Note -->
        <div class="mt-12 text-center text-sm font-mono text-slate-500">
            // Principle in action: Dependency Inversion
        </div>

    </div>
</section>
